<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.domka.menhajAlsaleheen.app.Others.FontSettingActivity">

    <RelativeLayout
        android:layout_width="363dp"
        android:layout_height="359dp"
        tools:layout_editor_absoluteX="11dp"
        android:background="@drawable/h_back"
        tools:layout_editor_absoluteY="73dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/linearLayout">


            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton_part1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:checked="true"
                    android:text="@string/s_menhaj"/>

                <RadioButton
                    android:id="@+id/radioButton_part2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/s_menhaj"/>

                <RadioButton
                    android:id="@+id/radioButton_part3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/s_menhaj"/>
            </RadioGroup>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout">


            <Button
                android:id="@+id/btn_save_font"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:background="@drawable/button_style"
                android:text="حفظ"/>

            <Button
                android:id="@+id/btn_cancel_font"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/button_style"
                android:text="الغاء"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
