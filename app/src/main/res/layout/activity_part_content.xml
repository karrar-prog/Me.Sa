<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_part"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.domka.menhajAlsaleheen.app.Controller.PartController.PartActivity">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/li_for_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/h_back"
                android:gravity="right"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_back"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/setting_back"/>

                        <Button
                            android:id="@+id/btn_list"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/setting_menu"
                            />

                        <Button
                            android:id="@+id/btn_setting"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="15dp"
                            android:background="@drawable/setting_all"/>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/li_setting"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"

                    android:gravity="center"
                    android:orientation="horizontal"

                    android:visibility="gone"


                    >

                    <HorizontalScrollView
                        android:id="@+id/scroll_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="5dp"


                        android:paddingRight="5dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/li_setting2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"


                            >


                            <Button
                                android:id="@+id/btn_s_share_page_content"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"

                                android:background="@drawable/ic_reply_black_24dp"/>

                            <Button
                                android:id="@+id/btn_s_add_note_page_content"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"

                                android:background="@drawable/ic_note_add_black_24dp"/>


                            <Button
                                android:id="@+id/btn_s_text_format"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"

                                android:background="@drawable/ic_playlist_add_check_black_24dp"/>


                            <Button
                                android:id="@+id/btn_s_font_type"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"

                                android:background="@drawable/ic_spellcheck_black_24dp"/>


                            <Button
                                android:id="@+id/btn_s_night_read"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"


                                android:background="@drawable/ic_visibility_white_24dp"/>


                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_setting_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"


                    android:gravity="center"
                    android:orientation="horizontal"


                    android:visibility="gone"


                    >


                    <LinearLayout
                        android:id="@+id/li_settingFont"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"


                        >


                        <Button
                            android:id="@+id/btn_s_increment"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"

                            android:background="@drawable/increment_button_style"/>

                        <Button
                            android:id="@+id/btn_s_search"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"


                            android:background="@drawable/settnig_search"/>

                        <Button
                            android:id="@+id/btn_s_decrement"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/decrement_button_style"
                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-60dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp"

                    >


                    <Button
                        android:id="@+id/btn_s_set_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_bookmark_border_black_24dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_for_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-15dp"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <android.support.v7.widget.SearchView
                        android:id="@+id/search_view_content"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:queryHint="ابحث عن كلمة في الكتاب"
                        card_view:queryBackground="@drawable/slider_bg"
                        card_view:queryHint="ابحث عن كلمة في الكتاب"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"


                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:background="@drawable/fotnote_style"
                        android:layout_marginLeft="33dp">

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="22dp"
                            android:layout_height="22dp"


                            android:alpha="0.8"
                            android:background="@drawable/left_btn"/>


                    </LinearLayout>

                    <ScrollView
                        android:id="@+id/s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="45dp"
                        android:layout_marginTop="20dp"
                        android:scrollbars="none"
                        >


                        <TextView
                            android:id="@+id/tv_page_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"

                            android:gravity="right"
                            android:paddingBottom="45dp"

                            android:text="content"
                            android:textColor="@color/my_black_coloer"
                            android:textIsSelectable="true"


                            android:textSize="22sp"

                            />

                    </ScrollView>

                    <LinearLayout
                        android:layout_width="22dp"
                        android:gravity="center"
                        android:layout_height="22dp"
                        android:background="@drawable/fotnote_style"
                        android:layout_marginRight="33dp">

                        <Button
                            android:id="@+id/btn_previous"
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:alpha="0.8"
                            android:background="@drawable/right_btn"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/li_foot_note"
            android:layout_width="match_parent"
            android:layout_height="350dp"

            android:layout_marginTop="-320dp"
            android:background="@drawable/edit_text_style3"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ScrollView
                android:id="@+id/s2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"

                android:layout_marginBottom="45dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="40dp"
                android:scrollbars="none"
                >


                <TextView
                    android:id="@+id/tv_page_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingBottom="45dp"

                    android:text="content"
                    android:textColor="@color/my_black_coloer"
                    android:textIsSelectable="true"


                    android:textSize="22sp"

                    />

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/l1"

        android:layout_marginTop="-90dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"

            android:background="@drawable/fotnote_style"

            >

            <Button
                android:id="@+id/btn_footnote"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/setting_expanding"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_current_page"
            android:layout_width="50dp"

            android:layout_height="20dp"

            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/cardview_light_background"

            android:textSize="15sp"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="right|left"

            android:layout_marginBottom="-30dp"

            android:max="100"

            />


    </LinearLayout>


</RelativeLayout>
