<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_part"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_b_coloer"
    tools:context="com.example.domka.menhajAlsaleheen.app.Controller.PartController.PartActivity">


    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:background="@drawable/setting_back"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical"
        >


        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/coverflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            coverflow:coverHeight="@dimen/cover_height"
            coverflow:coverWidth="@dimen/cover_width"
            coverflow:maxScaleFactor="1.5"
            coverflow:reflectionGap="0px"
            coverflow:rotationThreshold="0.5"
            coverflow:scalingThreshold="0.5"
            coverflow:spacing="0.6" />

        <Button
            android:id="@+id/btn_part1"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:text="@string/s_part1"
            android:textColor="@android:color/white"
            android:textSize="25sp"/>


        <Button
            android:id="@+id/btn_part2"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:text="@string/s_part2"
            android:textColor="@android:color/white"
            android:textSize="25sp"/>


        <Button
            android:id="@+id/btn_part3"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:text="@string/s_part3"
            android:textColor="@android:color/white"
            android:textSize="25sp"/>


    </LinearLayout>


</RelativeLayout>
